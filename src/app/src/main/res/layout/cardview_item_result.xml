<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewResult_id"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/restaurant_img_id"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:background="#2d2d2d"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/restaurant_name_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="Restaurant Name"
                    android:textColor="#2d2d2d"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/restaurant_address_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="Address"
                        android:textColor="#2d2d2d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/restaurant_distance_id"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_weight="8"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="6.1Km"
                        android:textColor="#6E6C6C"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/restaurant_type_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:text="Type"
                    android:textColor="#2d2d2d"
                    android:textSize="14sp" />
            </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>